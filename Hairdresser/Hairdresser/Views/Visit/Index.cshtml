@{
    ViewData["Title"] = "Book a visit!";
}


<div class="container">
    <div class="row justify-content-sm-center">
        <div class="col-sm-8">
            <form>
                <div class="form-group">
                    <label for="nameInput">Imię i nazwisko</label>
                    <input type="text" class="form-control" id="nameInput" placeholder="Wprowadź imię i nazwisko" required>
                </div>
                <div class="form-group">
                    <label for="dateInput">Data</label>
                    <input type="date" class="form-control" id="dateInput" placeholder="Data" required>
                </div>
                <div class="form-group">
                    <label for="phoneInput">Telefon</label>
                    <input type="tel" class="form-control" id="phoneInput" pattern="[0-9]+" placeholder="Numer telefonu" required>
                </div>
                <button type="submit" class="btn btn-primary">Zatwierdź</button>
            </form>
        </div>
        <div class="col-sm-4">
            <img class="visit-image" src="~/img/portfolio/portfolio-10.jpg"/>
        </div>
    </div>
</div>

<style>
    .container {
        width: 80%;
    }

    .visit-image {
        max-width: 100%;
        opacity: 0.8;
        border-radius: 2rem;
    }
</style>
